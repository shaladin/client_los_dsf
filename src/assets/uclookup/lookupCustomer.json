    "querystring": {
        "select": "SELECT C.CUST_NO AS CustNo, C.CUST_NAME AS CustName, B.ADDR AS FullAddr, C.MR_CUST_TYPE_CODE AS MrCustTypeCode, C.CUST_ID AS CustId",
      "from": "FROM dbo.CUST C LEFT JOIN (SELECT CA.MR_CUST_ADDR_TYPE_CODE, CA.CUST_ID, CA.ADDR FROM dbo.CUST_ADDR CA GROUP BY CA.MR_CUST_ADDR_TYPE_CODE, CA.CUST_ID, CA.ADDR) AS B ON B.CUST_ID = C.CUST_ID AND B.MR_CUST_ADDR_TYPE_CODE = 'LEGAL'",
      "where": "WHERE C.CUST_NO IS NOT NULL AND C.CUST_NO != ''"
    },
